<h1>Edit <%= @figure.name %></h1>

<form action="/figures/<%=@figure.id%>" method="POST">
	<input type="hidden" name="_method" value="PATCH">

	<label>Figure Name: </label>
	<input id="figure_name" type="text" name="figure[name]" value="<%=@figure.name%>">
	<br></br>

	<label>Edit Titles: </label><br>
	<% Title.all.each do |title| %>
	  <label><%= title.name %></label>
	  <input type="checkbox" name="figure[title_ids][]" value="<%=title.id%>" id="title_<%=title.id%>" <%= 'checked' if @figure.titles.include?(title) %>>
	  <br>
	<% end %>
    and/or, create a new title:
      <label>name:</label>
        <input  id="new_title" type="text" name="title[name]"></input>
      <br></br>
	<br></br>

	<label>Edit Landmarks: </label><br>
	<% Landmark.all.each do |landmark| %>
	  <label><%=landmark.name%></label>
	  <input type="checkbox" name="figure[landmark_ids][]" value="<%=landmark.id%>"" id="landmark_<%=landmark.id%>" <%= 'checked' if @figure.landmarks.include?(landmark) %>>
	  <br>
	<% end %>

	and/or, create a new landmark:
    <br></br>
    <label>name:</label>
      <input  id="new_landmark" type="text" name="landmark[name]"></input>
    <br></br>


    <input type="submit" name="Edit Figure" value="Edit Figure">
	
</form>